    display: flex;
    justify-content: start;
    border-left: 1px dashed gray;
    border-right: 1px dashed gray;
    border-bottom: 1px dashed gray;
    border-radius: 0 0 16px 16px;
    color: #333;
    margin: -50px 0 20px 0;
   
  }

  .navigation-loom{
    padding: 60px;
}

  .navigation-loom ul {
    padding: 0;
  }

  .navigation-loom h1{
    color: #FFFFFF !important;
    text-align: left !important;
    font-size: 38px !important;
    width: 500px;
    margin: 20px 0 !important;
}

    .navigation-loom p{
     color: #676665;
     text-align: left;
     font-size: 16px;
     width: 550px;
     margin: 0 !important;
}

  .navigation-loom ul li {
    list-style: none;
    display: inline-block;
    padding: 12px 20px;
    border: 1px dashed gray;
    color: #B3B3B2;
    font-size: 14px;
    cursor: pointer;
    border-radius: 6px;
  }

  a{
    text-decoration: none;
    color: #B3B3B2;
}

  .navigation-loom h1 {
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 10px;
    color: #111;
  }

  .navigation-loom p {
    font-size: 16px;
    color: #666;
    margin: 0 auto 20px;
  }


  .grid-style {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    width: 100%;     
    border-left: 1px dashed gray;
    margin: 0 0 0 0;
  }

  .border-b{
     border-bottom: 1px dashed gray;
}

   .border-l{
    border-right: 1px dashed gray;
}

  .grid-item {
  
    font-size: 16px;
    color: #444;
    padding: 50px;
  }

   .grid-item h3{
