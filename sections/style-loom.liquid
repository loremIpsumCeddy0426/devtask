{% schema %}
{
  "name": "Style Loom Hero Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "ELEVATE YOUR STYLE WITH STYLELOOM"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Subtext",
      "default": "Explore a world of fashion at StyleLoom, where trends meet affordability. Immerse yourself in the latest styles and seize exclusive promotions."
    },
    {
      "type": "text",
      "id": "stat_1_heading",
      "label": "Stat #1 Heading",
      "default": "1,500+"
    },
    {
      "type": "text",
      "id": "stat_1_text",
      "label": "Stat #1 Text",
      "default": "Fashion Products"
    },
    {
      "type": "text",
      "id": "stat_2_heading",
      "label": "Stat #2 Heading",
      "default": "50+"
    },
    {
      "type": "text",
      "id": "stat_2_text",
      "label": "Stat #2 Text",
      "default": "New arrivals every month."
    },
    {
      "type": "text",
      "id": "stat_3_heading",
      "label": "Stat #3 Heading",
      "default": "30% OFF"
    },
    {
      "type": "text",
      "id": "stat_3_text",
      "label": "Stat #3 Text",
      "default": "on select items."
    },
    {
      "type": "text",
      "id": "stat_4_heading",
      "label": "Stat #4 Heading",
      "default": "95%"
    },
    {
      "type": "text",
      "id": "stat_4_text",
      "label": "Stat #4 Text",
      "default": "Customer Satisfaction Rate"
    },
    {
      "type": "link_list",
      "id": "nav_menu",
      "label": "Navigation Tabs",
      "default": "main-menu"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button Block",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "max_blocks": 1,
  "presets": [
    {
      "name": "Style Loom Hero Banner",
      "blocks": [
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="styleloom">
  <div class="navigation-loom">
    <ul>
      <li><a href="#">All</a></li>
      <li><a href="#">Mens</a></li>
      <li><a href="#">Womens</a></li>
      <li><a href="#">Kids</a></li>
    </ul>
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.description }}</p>
  </div>

<div class="grid-style">
  <div class="grid-item border-b border-l">
    <h3>{{ section.settings.stat_1_heading }}</h3>
    <p>{{ section.settings.stat_1_text }}</p>
  </div>
  <div class="grid-item border-b">
    <h3>{{ section.settings.stat_2_heading }}</h3>
    <p>{{ section.settings.stat_2_text }}</p>
  </div>
  <div class="grid-item border-l">
    <h3>{{ section.settings.stat_3_heading }}</h3>
    <p>{{ section.settings.stat_3_text }}</p>
  </div>
  <div class="grid-item">
    <h3>{{ section.settings.stat_4_heading }}</h3>
    <p>{{ section.settings.stat_4_text }}</p>
  </div>
</div>


  
</section>

<style>
