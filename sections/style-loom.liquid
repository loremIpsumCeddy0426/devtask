
{% schema %}
{
  "name": "Style Loom Hero Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "ELEVATE YOUR STYLE WITH STYLELOOM"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Subtext",
      "default": "Explore a world of fashion at StyleLoom, where trends meet affordability. Immerse yourself in the latest styles and seize exclusive promotions."
    },
    {
      "type": "text",
      "id": "stat_1",
      "label": "Stat #1",
      "default": "1,500+ Fashion Products"
    },
    {
      "type": "text",
      "id": "stat_2",
      "label": "Stat #2",
      "default": "50+ New arrivals every month."
    },
    {
      "type": "text",
      "id": "stat_3",
      "label": "Stat #3",
      "default": "30% OFF on select items."
    },
    {
      "type": "text",
      "id": "stat_4",
      "label": "Stat #4",
      "default": "95% Customer Satisfaction Rate"
    },
    {
      "type": "link_list",
      "id": "nav_menu",
      "label": "Navigation Tabs",
      "default": "main-menu"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button Block",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "max_blocks": 1,
  "presets": [
    {
      "name": "Style Loom Hero Banner",
      "blocks": [
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="styleloom">
  <div class="navigation-loom">
    <ul>
      <li><a href="#">All</a></li>
      <li><a href="#">Mens</a></li>
      <li><a href="#">Womens</a></li>
      <li><a href="#">Kids</a></li>
    </ul>
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.description }}</p>
  </div>

  <div class="grid-style">
    <div class="grid-item border-b border-l">{{ section.settings.stat_1 }}</div>
    <div class="grid-item border-b">{{ section.settings.stat_2 }}</div>
    <div class="grid-item border-l">{{ section.settings.stat_3 }}</div>
    <div class="grid-item">{{ section.settings.stat_4 }}</div>
  </div>

  
</section>

<style>
  .styleloom {
    display: flex;
    justify-content: start;
    border-left: 1px dashed gray;
    border-right: 1px dashed gray;
    border-bottom: 1px dashed gray;
    border-radius: 0 0 16px 16px;
    color: #333;
    margin: -50px 0 20px 0;
   
  }

  .navigation-loom{
    padding: 60px;
}

  .navigation-loom ul {
    padding: 0;
  }

  .navigation-loom h1{
    color: #FFFFFF !important;
    text-align: left !important;
    font-size: 38px !important;
    width: 500px !important;
}

    .navigation-loom p{
     color: #676665 !important;
     text-align: left;
     font-size: 16px;
}

  .navigation-loom ul li {
    list-style: none;
    display: inline-block;
    margin: 0 5px;
    padding: 12px 20px;
    border: 1px dashed gray;
    color: #B3B3B2;
    font-size: 14px;
    cursor: pointer;
    border-radius: 6px;
  }

  a{
    text-decoration: none;
    color: #B3B3B2;
}

  .navigation-loom h1 {
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 10px;
    color: #111;
  }

  .navigation-loom p {
    font-size: 16px;
    color: #666;
    max-width: 600px;
    margin: 0 auto 20px;
  }


  .grid-style {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    width: 100%;
      
    border-left: 1px dashed gray;
    margin: 0 0 0 5%;
  }

  .border-b{
     border-bottom: 1px dashed gray;
}

   .border-l{
    border-right: 1px dashed gray;
}

  .grid-item {
    display:flex;
    align-items: center;
    text-align: center;
    font-size: 16px;
    color: #444;
    padding: 50px;
  }
</style>