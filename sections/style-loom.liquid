            padding: 40px 15px 20px 15px;
            margin: 40px 0 0 0 !important;
        }
        .navigation-loom ul li {
            padding: 10px 15px;
        }
         .navigation-loom h1 {
            font-size: 28px !important;
            width: 300px !important;
         }
           .navigation-loom p {
              font-size: 14px;
              width: 310px;
           }
             .grid-style {
                margin:0;
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                border-left: none;
             }
             .grid-item{
                padding:0;
                padding: 30px 10px;
            }

            .border-b{
                border-top: 1px dashed gray;
            }

            .grid-item h3{
                font-size: 30px;
            }

             
    }
</style>