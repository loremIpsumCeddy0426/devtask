{% schema %}
{
  "name": "t:sections.image-banner.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "t:sections.image-banner.settings.image_2.label"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button Block",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "max_blocks": 1,
  "presets": [
    {
      "name": "Image Banner with Button",
      "blocks": [
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="hero-banner" style="background-image: url({{ section.settings.image | image_url }}); background-size: cover; background-position: center; padding: 60px 20px; text-align: center; color: white;">
  <div class="hero-content">
    <div class="hero-buttons">
      <a href="{{ routes.all_products_collection_url }}" class="btn">Shop Now
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M6.875 3.125L16.25 3.125C16.4158 3.125 16.5747 3.19085 16.6919 3.30806C16.8092 3.42527 16.875 3.58424 16.875 3.75V13.125C16.875 13.4702 16.5952 13.75 16.25 13.75C15.9048 13.75 15.625 13.4702 15.625 13.125V5.25888L4.19194 16.6919C3.94786 16.936 3.55214 16.936 3.30806 16.6919C3.06398 16.4479 3.06398 16.0521 3.30806 15.8081L14.7411 4.375L6.875 4.375C6.52982 4.375 6.25 4.09518 6.25 3.75C6.25 3.40482 6.52982 3.125 6.875 3.125Z" fill="white"/>
        </svg>
      </a>
    </div>
  </div>
</section>


<style>
    .hero-banner{
      height: 450px;
      margin: 0 0 50px 0;
      position: relative;
    }

    .hero-buttons {
     position: absolute;
     bottom: -40px;
     left: 50%;
     transform: translateX(-50%);
     
    }

    .hero-buttons a{
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: #0F0F0F;
      padding: 14px 20px; 
      color: #fff; 
      text-decoration: none;
      border: 1px dashed gray;
      border-radius: 8px;
      margin: 13px 0 0 0;
 
    }

    @media screen and (max-width: 768px) {
      .hero-banner {
        height: 250px;
       
    }

    .hero-buttons{
      bottom: -20px;
    }

    .hero-buttons a{
      padding: 5px;
      font-size: 14px;
    }

    .hero-buttons svg{
      width: 10px;
      text-align: center;
    }

    }
</style>