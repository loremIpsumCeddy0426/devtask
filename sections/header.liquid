{{ 'base.css' | asset_url | stylesheet_tag }}

<header class="figma-header">
<nav class="figma-header__nav">
  <ul class="figma-header__menu">
    <li><a href="{{ routes.root_url }}" class="figma-header__link">Home</a></li>
    <li><a href="{{ routes.all_products_collection_url }}" class="figma-header__link product">Products</a></li>
    <li class="mobile-only"><a href="{{ routes.cart_url }}" class="figma-header__link">Cart</a></li>
    <li class="mobile-only"><a href="/pages/contact" class="figma-header__link">Contact</a></li>
  </ul>
</nav>
  <!-- Logo / Title -->
  <div class="figma-header__logo-wrapper mobile">
    <a href="/" class="figma-header__logo-link">
      {% if settings.logo != blank %}
        {% assign logo_alt = settings.logo.alt | default: shop.name | escape %}
        {% assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio %}
        {% capture sizes %}(min-width: 750px) {{ settings.logo_width }}px, 50vw{% endcapture %}
        {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
        {{ settings.logo | image_url: width: 600 | image_tag: class: 'figma-header__logo', widths: widths, height: logo_height, width: settings.logo_width, alt: logo_alt, sizes: sizes, preload: true }}
      {% else %}
        <h1 class="figma-header__shop-title">{{ shop.name }}</h1>
      {% endif %}
    </a>
    <!-- Hamburger SVG -->
    <button class="figma-header__toggle" aria-label="Toggle menu">
    <svg width="56" height="56" viewBox="0 0 56 56" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect width="56" height="56" rx="10" fill="#C2B4A3"/>
