    </svg>

    </button>
  </div>

  <!-- Cart + Contact -->
  <div class="figma-header__actions">
    <a href="{{ routes.cart_url }}" class="figma-header__icon">
      <svg width="20" height="21" viewBox="0 0 20 21" fill="none" xmlns="http://www.w3.org/2000/svg">
