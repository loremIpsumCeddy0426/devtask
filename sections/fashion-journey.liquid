{% schema %}
{
  "name": "Fashion Journey",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Navigating the StyleLoom Fashion Journey"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Intro Description",
      "default": "We've designed a straightforward shopping experience to make fashion accessible."
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Step Number",
          "default": "Step 01"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Discover Trends"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Step Description",
          "default": "Explore our curated collection of over 1000 styles, spanning global fashion trends."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Fashion Journey Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="fashion-journey-section">
  <div class="container">
    <div class="header-nav-style">
      <h1>{{ section.settings.title }}</h1>
      <p>{{ section.settings.description }}</p>
