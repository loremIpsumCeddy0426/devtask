      </defs>
      </svg>

    </div>
    <div class="steps">
      {% for block in section.blocks %}
        <div class="step">
          <h2>{{ block.settings.number }}</h2>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .header-nav-style svg{
    position: absolute;
    right: 0;
    top: 0;
  }

  .header-nav-style{
      padding: 60px;
      position: relative;
    }
  
  .header-nav-style h1{
    font-size: 38px;
  }

   .header-nav-style p{
    font-size: 16px;
    color: #676665;
  }

  .fashion-journey-section {
    border: 1px dashed gray;
    margin: 30px 0 30px 0;
    color: #ffffff;
    border-radius: 16px;
  }

  .fashion-journey-section .steps {
       display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        width: 100%;        
  }

  .fashion-journey-section .step{
    border-top: 1px dashed gray;
    border-right: 1px dashed gray;
    padding: 40px;
  }

  .fashion-journey-section .step h2 {
    margin-top: 0;
    color: #676665;
    font-size: 18px;
  }

   .fashion-journey-section .step h3 {
    font-size: 22px !important;
  }

   .fashion-journey-section .step p {
      font-size: 16px;
      color: #676665;
  }
    @media screen and (max-width: 768px) {
      .header-nav-style{
        padding: 20px 30px;
      }
        .header-nav-style h1{
          font-size: 28px;
        }

        .header-nav-style p{
          font-size: 14px;
        }
        .fashion-journey-section .steps {
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));   
      }
       .header-nav-style svg{
        display: none;
      }
    }
</style>